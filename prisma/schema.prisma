generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Person {
  id          String    @id @default(cuid())
  name        String
  gender      String?
  birthDate   DateTime?
  deathDate   DateTime?
  createdAt   DateTime  @default(now())

  parentId    String?
  parent      Person?   @relation("ParentChildren", fields: [parentId], references: [id])
  children    Person[]  @relation("ParentChildren")

  // Use distinct relation names for each side of a marriage
  marriagesAsA Marriage[] @relation("MarriageAsA")
  marriagesAsB Marriage[] @relation("MarriageAsB")
}

model Marriage {
  id        String   @id @default(cuid())
  spouseAId String
  spouseBId String

  spouseA   Person   @relation("MarriageAsA", fields: [spouseAId], references: [id])
  spouseB   Person   @relation("MarriageAsB", fields: [spouseBId], references: [id])

  @@unique([spouseAId, spouseBId])
}

